# Assert the ElasticSearch is up and running
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: elasticsearch
  {{if getenv "KUBERNETES_NAMESPACE"}}namespace: "{{ .Env.KUBERNETES_NAMESPACE }}"{{end}}
status:
  readyReplicas: 1
---
apiVersion: v1
kind: Service
metadata:
  name: elasticsearch
  {{if getenv "KUBERNETES_NAMESPACE"}}namespace: "{{ .Env.KUBERNETES_NAMESPACE }}"{{end}}
